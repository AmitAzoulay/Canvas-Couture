<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/mainStyle.css">
    <link rel="stylesheet" href="/css/profileStyle.css"> <!-- Link to your profile CSS -->
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Canvas Couture</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/orders">My Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/products/search/all">Shop Now</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/aboutus">About Us</a>
                    </li>
                </ul>

                <form class="d-flex" id="searchForm">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="searchInput">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

                <ul class="navbar-nav ms-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">
                            <i class="bi bi-cart-fill"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="bi bi-person"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>Welcome, <%= user.firstName %>!</h1>

        <div class="user-details">
            <h3>Your Details:</h3>
            <p>Email: <%= user.email %></p>
            <p>Phone: <%= user.phoneNumber %></p>
            <p>Address: <%= address %></p> <!-- Displaying the user's address -->
            <a href="/change-password" class="btn btn-primary">Change Password</a>
        </div>

        <div class="order-history">
            <h3>Order History:</h3>
            <% if (orders && orders.length > 0) { %>
                <div class="list-group">
                    <% orders.forEach(order => { %>
                        <div class="list-group-item">
                            <strong>Order ID:</strong> <%= order._id %><br>
                            <strong>Status:</strong> <%= order.status %><br>
                            <strong>Date:</strong> <%= new Date(order.orderDate).toDateString() %><br>
                            <strong>Items:</strong>
                            <ul>
                                <% order.items.forEach(item => { %>
                                    <li>
                                        <%= item.name %> - Price: $<%= item.price.toFixed(2) %> - Quantity: <%= item.quantity %>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="list-group-item">No orders found.</div>
            <% } %>
        </div>

        <div class="text-center mt-5">
            <button class="btn btn-back" onclick="window.location.href='/index'">Back to Shop</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        const searchForm = document.getElementById('searchForm');
        const searchInput = document.getElementById('searchInput');

        searchForm.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            const searchTerm = searchInput.value.trim();
            if (searchTerm) {
                window.location.href = `/products/search/name/${encodeURIComponent(searchTerm)}`;
            }
        });
    </script>
</body>
</html>
