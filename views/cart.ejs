<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart - Canvas Couture</title>
    <link rel="stylesheet" href="/css/cartStyle.css">
    <script src="/js/cartFunctions.js" defer></script>
</head>

<body>
    <div class="container">
        <h1>Your Cart</h1>

        <!-- Check if the cart has items -->
        <% if (cart && cart.length> 0) { %>
            <div class="cart">
                <table>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let totalAmount=0; %>
                            <% cart.forEach(order=> { %>
                                <% order.items.forEach(item=> { %>
                                    <tr>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                        <td>$<%= item.price %>
                                        </td>
                                        <td>
                                            <button class="minus-btn"
                                                onclick="removeFromCart('<%= order.orderId %>', '<%= item.productId %>')">-</button>
                                        </td>
                                    </tr>
                                    <% totalAmount +=item.price * item.quantity; %>
                                        <% }) %>
                                            <% }) %>
                    </tbody>
                </table>
                <div class="total">
                    <h2>Total Amount: $<%= totalAmount.toFixed(2) %>
                    </h2>
                    <button class="btn btn-payment" onclick="window.location.href='/payment'">Proceed to
                        Payment</button>
                </div>
            </div>
            <% } else { %>
                <p>Your cart is empty.</p>
                <% } %>

    </div>
    <div class="text-center mt-5">
        <button class="btn btn-back" onclick="window.history.back()">Back to Shop</button>
    </div>
</body>

</html>